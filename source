Create & load source table

CREATE TABLE IF NOT EXISTS data_modelling.default.source_data (
  order_id INT,
  order_date DATE,
  customer_id INT,
  customer_name STRING,
  customer_email STRING,
  product_id INT,
  product_name STRING,
  quantity INT,
  unit_price DECIMAL(10,2),
  payment_type STRING,
  country STRING,
  last_updated TIMESTAMP
);

